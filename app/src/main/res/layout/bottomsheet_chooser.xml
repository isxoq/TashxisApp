<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bottom_sheet_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_dialog"
        android:backgroundTint="@color/white"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:src="@drawable/ic_rectangle_bottom_sheet" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/from_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/take_photo"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_photo_camera"
            app:drawableTint="@color/text_hint_color" />

        <TextView
            android:id="@+id/from_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/choose_from_gallery"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_image_gallery"
            app:drawableTint="@color/text_hint_color" />
    </LinearLayout>
</LinearLayout>