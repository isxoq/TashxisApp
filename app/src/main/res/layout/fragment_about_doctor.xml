<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:fillViewport="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    tools:context=".presentation.ui.bottom_nav.shifokor_oyna.ui.AboutDoctorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_about_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="@id/cl_about_main">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="14dp"
                android:paddingStart="15dp"
                android:paddingBottom="15dp">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_doctor"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/Corner50Percent"
                    tools:src="@drawable/doctor_image" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_doctor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="14dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/dr_name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/iv_heart"
                    app:layout_constraintStart_toEndOf="@id/iv_doctor"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_doctor_speciality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/speciality"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toStartOf="@id/tv_star_count"
                    app:layout_constraintStart_toStartOf="@id/tv_doctor_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_doctor_name" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_qabul_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/price"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_doctor_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_doctor_speciality" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_distance_doctor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:text="@string/distance"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toStartOf="@id/tv_comment_doctor"
                    app:layout_constraintStart_toStartOf="@id/tv_doctor_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_qabul_price" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_image_heart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_star"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_star"
                    app:layout_constraintEnd_toEndOf="@id/iv_heart"
                    app:layout_constraintTop_toBottomOf="@id/iv_heart" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_star_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:gravity="bottom"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_star"
                    app:layout_constraintEnd_toStartOf="@id/iv_star"
                    tools:text="3.5" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_comment_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:paddingStart="5dp"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_distance_doctor"
                    tools:text="@string/string_comment" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_about_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"

            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_doctor">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_shifokor_xaqida_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="17dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_about_doctor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/shifokor_xaqida"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_fio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/doctor_fio"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_about_doctor" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/doctor_age"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_fio" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_university"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/univetsity"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_age" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_qualification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/qualification"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_university" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_language"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/language"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_qualification" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_yutuqlari"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/yutuqlari"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_language" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_about_doctor">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_hospital_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="16dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_hospital"
                    android:layout_width="340dp"
                    android:layout_height="160dp"
                    android:src="@drawable/kasalxona_rasm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_hospital"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:text="@string/hospital_name"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_hospital" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_price_about_doctor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/qabul_price"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_hospital" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/distance"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_price_about_doctor" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_distance"
                    app:srcCompat="@drawable/ic_icon_material_location_on" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_manzil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Manzil"
                    android:textSize="20sp"
                    app:fontFamily="@font/product_sans_bold"
                    app:layout_constraintBottom_toBottomOf="@id/iv_location_icon"
                    app:layout_constraintEnd_toStartOf="@id/ll_map"
                    app:layout_constraintStart_toEndOf="@id/iv_location_icon" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_manzil_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/hospital_address_text"
                    android:textSize="20sp"
                    app:fontFamily="@font/product_sans_bold"
                    app:layout_constraintEnd_toStartOf="@id/ll_map"
                    app:layout_constraintStart_toEndOf="@id/iv_location_icon"
                    app:layout_constraintTop_toBottomOf="@id/tv_manzil" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_work_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_manzil_text"
                    app:srcCompat="@drawable/ic_group_755" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_work_hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Ish vaqti"
                    android:textSize="20sp"
                    app:fontFamily="@font/product_sans_bold"
                    app:layout_constraintBottom_toBottomOf="@id/iv_work_hour"
                    app:layout_constraintEnd_toStartOf="@id/ll_map"
                    app:layout_constraintStart_toEndOf="@id/iv_work_hour" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_work_hour_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/work_hour_text"
                    android:textSize="20sp"
                    app:fontFamily="@font/product_sans_bold"
                    app:layout_constraintEnd_toStartOf="@id/ll_map"
                    app:layout_constraintStart_toEndOf="@id/iv_work_hour"
                    app:layout_constraintTop_toBottomOf="@id/tv_work_hour" />

                <LinearLayout
                    android:id="@+id/ll_map"
                    android:layout_width="100dp"
                    android:layout_height="170dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_work_hour_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_manzil">
                    <fragment
                        android:id="@+id/mapFragment"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_treat_ill_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="@string/davolay_oladigan_kasallik_nomlari"
                    android:textSize="20sp"
                    app:fontFamily="@font/product_sans_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_map" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_treat_ill_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineHeight="20dp"
                    android:text="Igna bilan davolash, loperaskopik operatsiyalar, plastik jarrohlik, Igna bilan davolash, loperaskopik operatsiyalar, plastik jarrohlik,Igna bilan davolash, loperaskopik operatsiyalar, plastik jarrohlik,Igna bilan davolash, loperaskopik operatsiyalar, plastik jarrohlik."
                    android:textSize="16sp"
                    app:fontFamily="@font/product_sans_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_treat_ill_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_set_meeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="35dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Shifokor bilan uchrashuv belgilash"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_treat_ill_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
