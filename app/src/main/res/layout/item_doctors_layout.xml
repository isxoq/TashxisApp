<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_doctor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="14dp"
        android:paddingStart="15dp"
        android:paddingBottom="14dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_doctor"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/doctor_image"
            app:shapeAppearanceOverlay="@style/Corner50Percent"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="@font/product_sans_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/iv_heart"
            app:layout_constraintStart_toEndOf="@id/iv_doctor"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="DR Marhabo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_doctor_speciality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/product_sans_bold"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/tv_star_count"
            app:layout_constraintStart_toStartOf="@id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@id/tv_doctor_name"
            tools:text="Stomatolog" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_qabul_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/price"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@id/tv_doctor_speciality" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_distance_doctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="@string/distance"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/tv_comment_doctor"
            app:layout_constraintStart_toStartOf="@id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@id/tv_qabul_price" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_heart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_image_heart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_star"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_star"
            app:layout_constraintEnd_toEndOf="@id/iv_heart"
            app:layout_constraintTop_toBottomOf="@id/iv_heart" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_star_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="bottom"
            android:paddingEnd="3dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_star"
            app:layout_constraintEnd_toStartOf="@id/iv_star"
            tools:text="3.5" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_comment_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/product_sans_regular"
            android:paddingStart="5dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_distance_doctor"
            tools:text="@string/string_comment" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>